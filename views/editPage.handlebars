<html>
    <head>
        {{>head}}
    </head>
    <body>
        {{>includeMenu}}
        <br/><br/><br/><br/>
        <div class="container">
            <div class="row">
                <br/><br/><br/>
                <form class="margin-base-vertical" method="post" action="/saveChanges">
                    <p class="input-group">
                        Technology : <input type="text" class="form-control input-lg" name="techName" readonly value="{{techRec.tech}}" />
                    </p>
                    <p class="input-group">
                        Description : <input type="text" required class="form-control input-lg" name="techDescr" value="{{techRec.description}}" />
                    </p>
                    <br/>
                    <p class="text-center">
                        <button type="submit" class="btn btn-success btn-lg"></button>
                    </p>
                </form>
            </div>
        </div>
    </body>
</html>